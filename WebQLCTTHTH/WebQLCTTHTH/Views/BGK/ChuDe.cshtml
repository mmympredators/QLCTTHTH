@model PagedList.PagedList<WebQLCTTHTH.Models.ChuDe>
@using PagedList.Mvc;
@using WebQLCTTHTH.Models;
@{
    ViewBag.Title = "ChuDe";
    Layout = "~/Views/Shared/_LayoutBGK.cshtml";
}

<h2>ChuDe</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Chủ đề
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenCD)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaCD }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaCD }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaCD })
            </td>
        </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("ChuDe", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
